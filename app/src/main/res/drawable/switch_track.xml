<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/design_default_color_primary"/> <size android:width="40dp" android:height="20dp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@android:color/darker_gray"/> <size android:width="40dp" android:height="20dp"/>
        </shape>
    </item>
</selector>